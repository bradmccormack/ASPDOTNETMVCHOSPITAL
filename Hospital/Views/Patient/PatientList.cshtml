@using Hospital.Interfaces

@{
    ViewBag.Title = "PatientList";
}

<h2>Patients on File</h2>

@model IEnumerable<IPatient>

<input type="text" placeholder="name to filter by" />

<table class="table table-borderd table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Date Of Birth</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Date of Registration</th>
            <th>Emergency Contact</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.DateOfBirth</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.DateOfRegistration</td>
                <td>@item.EmergencyContact</td>
            </tr>
        }
    </tbody>
</table>
